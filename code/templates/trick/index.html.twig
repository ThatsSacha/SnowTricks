{% extends 'base.html.twig' %}

{% block title %}Les tricks{% endblock %}

{% block main %}
    <main class="trick-list">
        <h1>Les tricks</h1>

        {% if tricks|length > 0 %}
            {% for trick in tricks %}
                <div class="trick-item">
                    <div class="top" style="background: black"></div>
                    <div class="bottom">
                        <h2>{{ trick.name }}</h2>
                        <a href="{{ path('trick_show', {'slug': trick.slug}) }}">
                            <button>
                                <i class="bi bi-arrow-return-right"></i>
                                Voir le trick
                            </button>
                        </a>
                    </div>
                </article>
            {% endfor %}
        {% endif %}

        {% if tricks|length == 0 %}
            <div class="card white">
                <div>Il n'y a pas encore de tricks</div>
                <a href="{{ path('trick_new') }}">Create new</a>
            </div>
        {% endif %}
    </main>
{% endblock %}
