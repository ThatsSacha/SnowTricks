        <a href="{{ path('trick_show', { slug: trick.slug }) }}" class="link-back">
            <span>&#8592; Retour au trick</span>
        </a>
        <div class="card white">
            <div class="title-container">
                <h1>Éditer trick</h1>
                {{ include('trick/_delete_form.html.twig') }}
            </div>
            {{ include('trick/_form.html.twig', {'button_label': 'Mettre à jour le trick'}) }}
        </div>
    </main>
{% endblock %}
