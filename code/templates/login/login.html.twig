{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block main %}
    <main>
        <div class="card white">
            <h1>Connexion</h1>
            <form method="post">
                {% if app.user %}
                    <div class="success">
                        <div>
                          Tu es déjà connecté(e) en tant que <em>{{ app.user.pseudo }}</em>,<br/>
                          <a href="{{ path('app_logout') }}">Se déconnecter</a>
                        </div>
                    </div>
                {% else %}
                    <div>
                        <div>
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" placeholder="Ex: mail@snowtricks.com" required>
                        </div>
                    </div>
                    <div>
                        <div>
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" placeholder="*******" required>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}"
                    >
                    {% if error %}
                        <div class="error">
                            <div>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        </div>
                    {% endif %}
                    {#
                        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                        See https://symfony.com/doc/current/security/remember_me.html

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" name="_remember_me"> Remember me
                            </label>
                        </div>
                    #}

                    <button type="submit">
                        <i class="bi bi-box-arrow-in-right"></i>
                        Se connecter
                    </button>
                {% endif %}
            </form>
        </div>
    </main>
{% endblock %}
